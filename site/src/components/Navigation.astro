---
export interface Props {
  title?: string;
}

const { title } = Astro.props;
const currentPath = new URL(Astro.request.url).pathname;
import Brand from './Brand.astro';
---
<header class="header">
  <nav class="nav">
    <div class="nav-brand">
      <a href="/" class="brand-link" aria-label="Open Data Hub SE">
        <Brand />
      </a>
    </div>
    <ul class="nav-menu">
      <li><a href="/" class={currentPath === '/' ? 'nav-link active' : 'nav-link'}>Start</a></li>
      <li><a href="/guides/" class={currentPath.startsWith('/guides') ? 'nav-link active' : 'nav-link'}>Guider</a></li>
      <li><a href="/resources/" class={currentPath === '/resources/' ? 'nav-link active' : 'nav-link'}>Resurser</a></li>
      <li><a href="/labs/" class={currentPath === '/labs/' ? 'nav-link active' : 'nav-link'}>Labs</a></li>
      <li><a href="/community/" class={currentPath === '/community/' ? 'nav-link active' : 'nav-link'}>Community</a></li>
      <li><a href="/rewards/" class={currentPath === '/rewards/' ? 'nav-link active' : 'nav-link'}>Rewards</a></li>
      <li><a href="/about/" class={currentPath === '/about/' ? 'nav-link active' : 'nav-link'}>Om</a></li>
    </ul>
  </nav>
</header>

<style>
  .header {
    border-bottom: 1px solid var(--border);
    background: var(--bg2);
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 2px 16px #0d1117cc;
  }

  .nav {
    max-width: var(--container);
    margin: 0 auto;
    padding: var(--spacing-md) var(--spacing-lg);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-brand {
    flex-shrink: 0;
  }

  .brand-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    padding: 0;
    margin: 0;
    background: none;
    box-shadow: none;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: var(--spacing-lg);
    margin: 0;
    padding: 0;
  }

  .nav-link {
    color: var(--muted);
    text-decoration: none;
    font-size: var(--font-size-sm);
    padding: 0 2px;
    transition: color 0.2s, box-shadow 0.2s;
    position: relative;
  }
  .nav-link:hover {
    color: var(--accent1);
    text-shadow: 0 0 8px #58a6ff99;
  }
  .nav-link.active {
    color: var(--accent3);
    font-weight: 700;
    border-bottom: 2px solid var(--accent3);
    text-shadow: 0 0 12px #b388ff99;
    box-shadow: 0 2px 16px #58a6ff44;
    background: linear-gradient(90deg, #58a6ff22 0%, #b388ff22 100%);
    border-radius: 2px;
  }

  @media (max-width: 768px) {
    .nav {
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .nav-menu {
      width: 100%;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
