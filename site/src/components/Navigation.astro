---
import Brand from './Brand.astro';

export interface Props {
  title?: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;
const isSearchPage = currentPath.startsWith(`${base}search`);

const navItems = [
  { href: base, label: 'Start' },
  { href: `${base}guides/`, label: 'Guider' },
  { href: `${base}resources/`, label: 'Resurser' },
  { href: `${base}labs/`, label: 'Labs' },
  { href: `${base}community/`, label: 'Community' },
  { href: `${base}rewards/`, label: 'Rewards' },
  { href: `${base}about/`, label: 'Om' },
];

const isActive = (href: string) => {
  if (href === base) return currentPath === base;
  return currentPath.startsWith(href);
};
---

<header class={isSearchPage ? 'header header--search' : 'header'}>
  <nav class="nav" aria-label="Primary">
    <a href={base} class="brand-link" aria-label="Open Data Orbit">
      <Brand />
      <span class="beta-pill">BETA</span>
    </a>

    <!-- Desktop menu (hidden on mobile by default) -->
    <ul class="menu-desktop">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class={isActive(item.href) ? 'link active' : 'link'}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>

    <form class="nav-search" action={`${base}search/`} method="get" role="search" aria-hidden={isSearchPage ? 'true' : undefined}>
      <label class="sr-only" for="nav-search-input">Sök</label>
      <input
        id="nav-search-input"
        name="q"
        class="nav-search__input"
        type="search"
        placeholder="Sök..."
        data-nav-search-input
      />
    </form>

    <!-- Mobile toggle (visible on mobile by default) -->
    <button
      class="menu-toggle"
      type="button"
      aria-label="Open menu"
      aria-controls="mobile-menu"
      aria-expanded="false"
      data-nav-toggle
    >
      <span class="burger" aria-hidden="true"></span>
    </button>
  </nav>

  <!-- Mobile overlay + panel -->
  <div class="overlay" id="mobile-menu" hidden data-overlay>
    <div class="panel" role="dialog" aria-modal="true" aria-label="Menu">
      <div class="panel-head">
        <span class="panel-title">Navigation</span>
        <button class="close" type="button" aria-label="Close menu" data-nav-close>✕</button>
      </div>

      <form class="nav-search mobile" action={`${base}search/`} method="get" role="search" aria-hidden={isSearchPage ? 'true' : undefined}>
        <label class="sr-only" for="nav-search-input-mobile">Sök</label>
        <input
          id="nav-search-input-mobile"
          name="q"
          class="nav-search__input"
          type="search"
          placeholder="Sök..."
          data-nav-search-input-mobile
        />
      </form>

      <ul class="menu-mobile">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={isActive(item.href) ? 'mobile-link active' : 'mobile-link'}
              data-nav-link
            >
              <span>{item.label}</span>
              <span class="chev" aria-hidden="true">›</span>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</header>

<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    const basePath = "${base}";
    const toggle = document.querySelector('[data-nav-toggle]');
    const overlay = document.querySelector('[data-overlay]');
    const closeBtn = document.querySelector('[data-nav-close]');
    const links = document.querySelectorAll('[data-nav-link]');
    const navSearchInput = document.querySelector('[data-nav-search-input]');
    const navSearchInputMobile = document.querySelector('[data-nav-search-input-mobile]');
    const isSearch = window.location.pathname.startsWith(`${base}`) && window.location.pathname.includes('/search');

    if (!toggle || !overlay) return;

    const setOpen = (open) => {
      toggle.setAttribute('aria-expanded', String(open));
      overlay.toggleAttribute('hidden', !open);
      document.documentElement.style.overflow = open ? 'hidden' : '';
    };

    // Ensure closed on load
    setOpen(false);

    toggle.addEventListener('click', () => {
      const open = toggle.getAttribute('aria-expanded') === 'true';
      setOpen(!open);
    });

    closeBtn?.addEventListener('click', () => setOpen(false));
    links.forEach((a) => a.addEventListener('click', () => setOpen(false)));

    window.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') setOpen(false);
    });

    overlay.addEventListener('click', (e) => {
      if (e.target === overlay) setOpen(false);
    });

    if (!isSearch) {
      const goToSearch = () => {
        window.location.href = `${basePath}search/?focus=1`;
      };
      navSearchInput?.addEventListener('pointerdown', (event) => {
        event.preventDefault();
        goToSearch();
      });
      navSearchInput?.addEventListener('focus', () => goToSearch());
      navSearchInputMobile?.addEventListener('pointerdown', (event) => {
        event.preventDefault();
        goToSearch();
      });
      navSearchInputMobile?.addEventListener('focus', () => goToSearch());
    }
  });
</script>

<style>
/* Header shell */
.header{
  position: sticky;
  top: 0;
  z-index: 100;
  isolation: isolate;
}

.header::before{
  content:"";
  position:absolute;
  inset:0;
  pointer-events:none;

  background:
    radial-gradient(ellipse 70% 120% at 20% 0%,
      rgba(31,111,235,0.16) 0%,
      transparent 55%
    ),
    radial-gradient(ellipse 70% 120% at 80% 30%,
      rgba(44,83,100,0.14) 0%,
      transparent 55%
    ),
    rgba(13,17,23,0.72);

  backdrop-filter: blur(14px);
  -webkit-backdrop-filter: blur(14px);
  border-bottom: 1px solid rgba(255,255,255,0.08);
  box-shadow: 0 10px 30px rgba(0,0,0,0.35);
}

.nav{
  position: relative;
  max-width: 1100px;
  margin: 0 auto;
  padding: 12px 16px;
  display:flex;
  align-items:center;
  justify-content: space-between;
  gap: 12px;
}

/* Brand */
.brand-link{
  display:flex;
  align-items:center;
  gap: 10px;
  text-decoration:none;
  color: rgba(230,237,243,0.92);
}

.beta-pill{
  display:inline-flex;
  align-items:center;
  padding: 3px 10px;
  border-radius: 999px;
  font-family: var(--font-mono);
  font-size: 0.68rem;
  letter-spacing: 0.14em;
  text-transform: uppercase;
  color: rgba(88,166,255,0.92);
  background: rgba(88,166,255,0.08);
  border: 1px solid rgba(88,166,255,0.16);
}

/* Desktop menu: OFF by default (mobile-first) */
.menu-desktop{
  display:none;
  list-style:none;
  margin:0;
  padding:0;
  align-items:center;
  gap: 16px;
}

.nav-search{
  display:none;
  align-items:center;
}
.nav-search__input{
  width: 160px;
  padding: 6px 10px;
  border-radius: 999px;
  border: 1px solid rgba(255,255,255,0.1);
  background: rgba(13,17,23,0.35);
  color: rgba(230,237,243,0.9);
  font-size: 0.85rem;
  caret-color: rgba(230,237,243,0.9);
}
.nav-search__input:-webkit-autofill,
.nav-search__input:-webkit-autofill:hover,
.nav-search__input:-webkit-autofill:focus,
.nav-search__input:-webkit-autofill:active{
  -webkit-box-shadow: 0 0 0 1000px rgba(13,17,23,0.9) inset;
  -webkit-text-fill-color: rgba(230,237,243,0.9);
  caret-color: rgba(230,237,243,0.9);
  transition: background-color 9999s ease-in-out 0s;
}
.nav-search__input::placeholder{
  color: rgba(230,237,243,0.45);
}
.nav-search.mobile{
  display:flex;
  padding: 10px;
}

.header--search .nav-search,
.header--search .nav-search.mobile{
  display: none !important;
}

.link{
  position: relative;
  text-decoration:none;
  color: rgba(230,237,243,0.70);
  font-weight: 650;
  font-size: 0.95rem;
  padding: 8px 2px;
  border-radius: 8px;
}

.link:hover{
  color: rgba(230,237,243,0.92);
}

.link.active{
  color: rgba(230,237,243,0.92);
}

.link.active::after{
  content:"";
  position:absolute;
  left:0;
  right:0;
  bottom: -2px;
  height: 2px;
  border-radius: 999px;
  background: rgba(88,166,255,0.75);
}

/* Mobile toggle: ON by default */
.menu-toggle{
  width: 44px;
  height: 40px;
  border-radius: 10px;
  border: 1px solid rgba(255,255,255,0.10);
  background: rgba(255,255,255,0.04);
  color: rgba(230,237,243,0.92);
  cursor:pointer;
}

.menu-toggle:focus-visible,
.close:focus-visible{
  outline: 2px solid rgba(88,166,255,0.55);
  outline-offset: 2px;
}

.burger{
  display:block;
  width: 18px;
  height: 2px;
  background: currentColor;
  border-radius: 999px;
  position: relative;
  margin: 0 auto;
}

.burger::before,
.burger::after{
  content:"";
  position:absolute;
  left:0;
  width: 18px;
  height: 2px;
  background: currentColor;
  border-radius: 999px;
}

.burger::before{ top: -6px; }
.burger::after{ top: 6px; }

/* Mobile overlay + panel */
.overlay{
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.45);
  display:flex;
  justify-content:flex-end;
  padding: 12px;
}

/* Make sure hidden ALWAYS hides the overlay */
.overlay[hidden]{
  display: none !important;
}

.panel{
  width: min(420px, 92vw);
  border-radius: 14px;
  background: rgba(22,27,34,0.92);
  border: 1px solid rgba(255,255,255,0.10);
  box-shadow: 0 24px 80px rgba(0,0,0,0.55);
  backdrop-filter: blur(14px);
  -webkit-backdrop-filter: blur(14px);
  overflow:hidden;
}

.panel-head{
  display:flex;
  align-items:center;
  justify-content:space-between;
  padding: 12px 12px;
  border-bottom: 1px solid rgba(255,255,255,0.08);
}

.panel-title{
  font-family: var(--font-mono);
  text-transform: uppercase;
  letter-spacing: 0.12em;
  font-size: 0.75rem;
  color: rgba(88,166,255,0.85);
}

.close{
  width: 40px;
  height: 36px;
  border-radius: 10px;
  border: 1px solid rgba(255,255,255,0.10);
  background: rgba(255,255,255,0.04);
  color: rgba(230,237,243,0.92);
  cursor:pointer;
}

.menu-mobile{
  list-style:none;
  margin:0;
  padding: 10px;
  display:flex;
  flex-direction:column;
  gap: 6px;
}

.mobile-link{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap: 12px;
  padding: 12px 12px;
  border-radius: 10px;
  text-decoration:none;
  color: rgba(230,237,243,0.88);
  border: 1px solid rgba(255,255,255,0.08);
  background: rgba(255,255,255,0.03);
}

.mobile-link:hover{
  background: rgba(255,255,255,0.06);
  border-color: rgba(88,166,255,0.18);
}

.mobile-link.active{
  border-color: rgba(88,166,255,0.24);
  box-shadow: 0 0 0 2px rgba(13,17,23,0.55) inset;
}

.chev{
  opacity: 0.6;
}

/* Desktop breakpoint */
@media (min-width: 901px){
  .menu-desktop{ display:flex; }
  .menu-toggle{ display:none; }
  .overlay{ display:none; }
  .nav{ padding: 12px 20px; }
  .nav-search{ display:flex; }
}

/* --- HARD RESET for nav lists (avoid global ul/ol styles) --- */
.header .menu-desktop,
.header .menu-mobile {
  list-style: none !important;
  margin: 0 !important;
  padding: 0 !important;
}

.header .menu-desktop li,
.header .menu-mobile li {
  list-style: none !important;
  margin: 0 !important;
  padding: 0 !important;
}

/* --- Ensure correct responsive behavior (force) --- */
/* Mobile-first: hamburger ON, desktop menu OFF */
.header .menu-toggle { 
  display: inline-flex !important;
  align-items: center;
  justify-content: center;
}
.header .menu-desktop { 
  display: none !important;
}

/* Desktop: hamburger OFF, desktop menu ON */
@media (min-width: 901px) {
  .header .menu-toggle { display: none !important; }
  .header .menu-desktop {
    display: flex !important;
    align-items: center;
    gap: 16px;
  }
}

/* Optional: keep desktop menu to the right, GitHub-ish */
@media (min-width: 901px) {
  .header .nav {
    justify-content: space-between;
  }
  .header .menu-desktop {
    margin-left: auto;
  }
}
</style>
