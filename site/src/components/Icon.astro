---
export interface Props {
  name: 'data' | 'code' | 'chat' | 'book';
  size?: number;
}
const { name, size = 32 } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 32 32"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  style="vertical-align: middle;"
>
  {name === 'data' && (
    // Cylinder (database)
    <>
      <ellipse cx="16" cy="7" rx="10" ry="4" stroke="currentColor" stroke-width="2" fill="none" />
      <path d="M6 7v14c0 2.2 4.5 4 10 4s10-1.8 10-4V7" stroke="currentColor" stroke-width="2" fill="none" />
      <ellipse cx="16" cy="21" rx="10" ry="4" stroke="currentColor" stroke-width="2" fill="none" />
    </>
  )}
  {name === 'code' && (
    // Code: < >
    <>
      <polyline points="12,10 6,16 12,22" stroke="currentColor" stroke-width="2" fill="none" />
      <polyline points="20,10 26,16 20,22" stroke="currentColor" stroke-width="2" fill="none" />
      <line x1="16" y1="10" x2="16" y2="22" stroke="currentColor" stroke-width="2" />
    </>
  )}
  {name === 'chat' && (
    // Chat bubble
    <>
      <ellipse cx="16" cy="14" rx="10" ry="7" stroke="currentColor" stroke-width="2" fill="none" />
      <path d="M10 21c0 2 2 3 6 3s6-1 6-3" stroke="currentColor" stroke-width="2" fill="none" />
    </>
  )}
  {name === 'book' && (
    // Book/docs
    <>
      <rect x="6" y="8" width="20" height="16" rx="2" stroke="currentColor" stroke-width="2" fill="none" />
      <line x1="16" y1="8" x2="16" y2="24" stroke="currentColor" stroke-width="2" />
      <line x1="10" y1="12" x2="14" y2="12" stroke="currentColor" stroke-width="2" />
      <line x1="18" y1="12" x2="22" y2="12" stroke="currentColor" stroke-width="2" />
    </>
  )}
</svg>
