---
export interface Props {
  title?: string;
}

const { title } = Astro.props;
const currentPath = new URL(Astro.request.url).pathname;
import Brand from './Brand.astro';
---
<header class="header">
  <nav class="nav">
    <div class="nav-brand">
      <a href="/" class="brand-link" aria-label="Open Data Hub SE">
        <Brand />
        <span class="beta-pill">BETA</span>
      </a>
    </div>
    <ul class="nav-menu">
      <li><a href="/" class={currentPath === '/' ? 'nav-link active' : 'nav-link'}>Start</a></li>
      <li><a href="/guides/" class={currentPath.startsWith('/guides') ? 'nav-link active' : 'nav-link'}>Guider</a></li>
      <li><a href="/resources/" class={currentPath === '/resources/' ? 'nav-link active' : 'nav-link'}>Resurser</a></li>
      <li><a href="/labs/" class={currentPath === '/labs/' ? 'nav-link active' : 'nav-link'}>Labs</a></li>
      <li><a href="/community/" class={currentPath === '/community/' ? 'nav-link active' : 'nav-link'}>Community</a></li>
      <li><a href="/rewards/" class={currentPath === '/rewards/' ? 'nav-link active' : 'nav-link'}>Rewards</a></li>
      <li><a href="/about/" class={currentPath === '/about/' ? 'nav-link active' : 'nav-link'}>Om</a></li>
    </ul>
  </nav>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(22,27,34,0.82);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1.5px solid #222a36cc;
    box-shadow: 0 2px 16px #0d111799;
    transition: background 0.2s, border-color 0.2s;
  }

  .nav {
    max-width: var(--container);
    margin: 0 auto;
    padding: var(--spacing-md) var(--spacing-lg);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-brand {
    flex-shrink: 0;
  }

  .brand-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    padding: 0;
    margin: 0;
    background: none;
    box-shadow: none;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: var(--spacing-lg);
    margin: 0;
    padding: 0;
  }

  .nav-link {
    color: var(--muted);
    text-decoration: none;
    font-size: var(--font-size-sm);
    padding: 0 2px;
    transition: color 0.2s, box-shadow 0.2s;
    position: relative;
  }
  .nav-link:hover {
    color: var(--accent1);
    text-shadow: 0 0 8px #58a6ff99;
  }
  .nav-link.active {
    color: var(--fg);
    font-weight: 700;
    background: none;
    border-bottom: none;
  }
  .nav-link.active::after {
    content: '';
    display: block;
    height: 4px;
    margin: 0 auto 0.1em auto;
    width: 80%;
    border-radius: 2px;
    background: var(--gradient-milkyway);
    box-shadow: none;
    opacity: 0.92;
    transition: background 0.18s;
  }

  .beta-pill {
    display: inline-block;
    margin-left: 0.5em;
    font-size: 0.65em;
    font-family: var(--font-mono);
    color: var(--accent1);
    background: rgba(88,166,255,0.10);
    border: 1px solid #58a6ff33;
    border-radius: 6px;
    padding: 1px 7px 1px 7px;
    letter-spacing: 0.08em;
    font-weight: 600;
    vertical-align: middle;
    box-shadow: 0 1px 4px #58a6ff11;
    opacity: 0.7;
    position: relative;
    top: -2px;
  }

  @media (max-width: 768px) {
    .nav {
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .nav-menu {
      width: 100%;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
