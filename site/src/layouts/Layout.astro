---
import Navigation from '../components/Navigation.astro';
import '../styles/globals.css';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Open Data Orbit',
  description = 'Sveriges communityhub för öppna data, guider, resurser och samarbete.',
} = Astro.props;

const base = import.meta.env.BASE_URL;
const baseUrl = 'https://melissaskywalkz.github.io/open-data-orbit';
const canonical = new URL(Astro.url.pathname, baseUrl).toString();
const ogImage = `${baseUrl}/favicon.svg`;
---

<!doctype html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <meta name="theme-color" content="#0d1117" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={`${base}favicon.svg`} />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Oxanium:wght@400;600;700;800&family=Red+Hat+Display:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;600&display=swap"
      rel="stylesheet"
    >
  </head>
  <body>
    <Navigation />
    <main class="container">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="site-footer__bar"></div>

      <div class="site-footer__inner container">
        <div class="site-footer__left">
          <div class="site-footer__brand">
            <span class="site-footer__dot" aria-hidden="true"></span>
            <span class="site-footer__name">Open Data Orbit</span>
            <span class="site-footer__pill">BETA</span>
          </div>

          <p class="site-footer__tagline">
            Communitydriven kunskapsbank för öppna data i Sverige.
          </p>
        </div>

        <div class="site-footer__right">
          <div class="site-footer__meta">
            <a
              class="site-footer__ext"
              href="https://github.com/MelissaSkywalkz/open-data-orbit"
              target="_blank"
              rel="noopener"
            >
              GitHub
            </a>
            <span class="site-footer__sep">•</span>
            <a
              class="site-footer__ext"
              href="https://github.com/MelissaSkywalkz/open-data-orbit/discussions"
              target="_blank"
              rel="noopener"
            >
              Discussions
            </a>
          </div>

          <div class="site-footer__fine">
            <span>© 2026</span>
            <span class="site-footer__sep">•</span>
            <span>Built with Astro</span>
            <span class="site-footer__sep">•</span>
            <span>GitHub Pages</span>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>