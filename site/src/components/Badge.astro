---
export interface Props {
  label: string;
  /** Visual style */
  variant?: 'default' | 'orbit' | 'launch' | 'comms' | 'terminal' | 'star';
  /** Icon (auto = picks based on variant/label) */
  icon?: 'auto' | 'rocket' | 'orbit' | 'star' | 'antenna' | 'terminal' | 'none';
  /** Smaller chip */
  size?: 'sm' | 'md';
}

const {
  label,
  variant = 'orbit',
  icon = 'auto',
  size = 'sm',
} = Astro.props;

const normalized = (label ?? '').toLowerCase();

const autoIcon = (() => {
  if (icon !== 'auto') return icon;

  if (variant === 'launch' || normalized.includes('launch') || normalized.includes('ready')) return 'rocket';
  if (variant === 'terminal' || normalized.includes('lab') || normalized.includes('terminal')) return 'terminal';
  if (variant === 'comms' || normalized.includes('comms') || normalized.includes('community')) return 'antenna';
  if (variant === 'star' || normalized.includes('star') || normalized.includes('badge')) return 'star';
  return 'orbit';
})();

const classes = ['badge', `badge--${variant}`, `badge--${size}`].join(' ');
---

<span class={classes} data-icon={autoIcon}>
  {autoIcon !== 'none' && (
    <span class="badge__icon" aria-hidden="true">
      {autoIcon === 'rocket' && (
        <svg viewBox="0 0 24 24" width="14" height="14" fill="none">
          <path d="M14.6 3.6c3.7.7 5.9 3 6.7 6.7-2.6 2.1-5.7 3.5-9.1 4.1l-2.9-2.9c.6-3.4 2-6.5 5.3-7.9Z" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M9.3 11.3 6 14.6c-.4.4-.6 1-.5 1.6l.3 2.2 2.2.3c.6.1 1.2-.1 1.6-.5l3.3-3.3" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M6.7 17.3 5 19" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
          <path d="M14.7 6.7h0" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
        </svg>
      )}

      {autoIcon === 'orbit' && (
        <svg viewBox="0 0 24 24" width="14" height="14" fill="none">
          <circle cx="12" cy="12" r="4.2" stroke="currentColor" stroke-width="1.8"/>
          <ellipse cx="12" cy="12" rx="9" ry="5" stroke="currentColor" stroke-width="1.4" opacity="0.95"/>
          <path d="M19.8 10.2c.9.6 1.4 1.2 1.4 1.8 0 2.8-4.1 5-9.2 5-5.1 0-9.2-2.2-9.2-5 0-.6.5-1.2 1.4-1.8" stroke="currentColor" stroke-width="1.2" opacity="0.55" stroke-linecap="round"/>
          <circle cx="18.6" cy="9.4" r="1" fill="currentColor" opacity="0.9"/>
        </svg>
      )}

      {autoIcon === 'star' && (
        <svg viewBox="0 0 24 24" width="14" height="14" fill="none">
          <path d="M12 3.5l2.2 5.2 5.6.5-4.3 3.7 1.3 5.5L12 15.8 7.2 18.4l1.3-5.5-4.3-3.7 5.6-.5L12 3.5Z" stroke="currentColor" stroke-width="1.8" stroke-linejoin="round"/>
        </svg>
      )}

      {autoIcon === 'antenna' && (
        <svg viewBox="0 0 24 24" width="14" height="14" fill="none">
          <path d="M12 14v7" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
          <path d="M8 21h8" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
          <path d="M12 14a4.5 4.5 0 1 0 0-9 4.5 4.5 0 0 0 0 9Z" stroke="currentColor" stroke-width="1.8"/>
          <path d="M5.6 9.1c1.4-2 3.8-3.3 6.4-3.3s5 1.3 6.4 3.3" stroke="currentColor" stroke-width="1.4" opacity="0.7" stroke-linecap="round"/>
          <path d="M3.6 7.4C5.6 4.6 8.6 3 12 3s6.4 1.6 8.4 4.4" stroke="currentColor" stroke-width="1.2" opacity="0.45" stroke-linecap="round"/>
        </svg>
      )}

      {autoIcon === 'terminal' && (
        <svg viewBox="0 0 24 24" width="14" height="14" fill="none">
          <path d="M4.5 6.5h15a2 2 0 0 1 2 2v7a2 2 0 0 1-2 2h-15a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2Z" stroke="currentColor" stroke-width="1.8"/>
          <path d="M7 10l2.2 2.2L7 14.4" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M11.2 14.4h4.2" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
        </svg>
      )}
    </span>
  )}

  <span class="badge__label">{label}</span>
</span>

<style>
.badge{
  display:inline-flex;
  align-items:center;
  gap:8px;
  padding:3px 10px;
  border-radius:999px;
  border:1px solid rgba(88,166,255,0.18);
  background: rgba(13,17,23,0.35);
  color: rgba(230,237,243,0.78);
  font-family: var(--font-mono, ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace);
  letter-spacing: 0.10em;
  text-transform: uppercase;
  font-weight: 800;
  line-height: 1;
  user-select: none;
  position: relative;
  overflow: hidden;
  isolation: isolate;
}

.badge--md{
  padding:6px 14px;
  font-size: 0.85rem;
}
.badge--sm{
  font-size: 0.75rem;
}

.badge__icon{
  display:inline-flex;
  align-items:center;
  justify-content:center;
  color: var(--accent3, #58a6ff);
  filter: drop-shadow(0 0 8px rgba(88,166,255,0.22));
}

.badge__label{
  position:relative;
  z-index:2;
}

/* “orbit sheen” overlay */
.badge::before{
  content:"";
  position:absolute;
  inset:-2px;
  background:
    radial-gradient(ellipse 80% 120% at 20% 0%, rgba(31,111,235,0.22) 0%, transparent 55%),
    radial-gradient(ellipse 80% 120% at 80% 100%, rgba(44,83,100,0.18) 0%, transparent 55%);
  opacity: 0.9;
  z-index:0;
}

.badge::after{
  content:"";
  position:absolute;
  inset:0;
  background: linear-gradient(110deg,
    transparent 0%,
    rgba(255,255,255,0.08) 22%,
    transparent 45%);
  transform: translateX(-60%);
  opacity: 0;
  z-index:1;
}

.badge:hover{
  border-color: rgba(88,166,255,0.32);
  color: rgba(230,237,243,0.92);
  box-shadow: 0 10px 30px rgba(0,0,0,0.35);
}

.badge:hover::after{
  opacity: .9;
  transform: translateX(60%);
  transition: transform 600ms ease, opacity 250ms ease;
}

.badge--launch { border-color: rgba(88,166,255,0.22); }
.badge--launch .badge__icon{ color: rgba(88,166,255,0.95); }

.badge--terminal{ border-color: rgba(88,166,255,0.18); }
.badge--terminal .badge__icon{ color: rgba(88,166,255,0.85); }

.badge--comms{ border-color: rgba(88,166,255,0.18); }
.badge--comms .badge__icon{ color: rgba(88,166,255,0.85); }

.badge--star{ border-color: rgba(88,166,255,0.18); }
.badge--star .badge__icon{ color: rgba(230,237,243,0.85); filter: drop-shadow(0 0 10px rgba(255,255,255,0.10)); }

/* Default / orbit */
.badge--orbit{
  border-color: rgba(88,166,255,0.22);
}
</style>