---
import Navigation from '../components/Navigation.astro';
import '../styles/globals.css';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Open Data Orbit',
  description = 'Sveriges communityhub för öppna data, guider, resurser och samarbete.',
} = Astro.props;

const baseUrl = 'https://melissaskywalkz.github.io/open-data-orbit';
const canonical = new URL(Astro.url.pathname, baseUrl).toString();
const ogImage = `${baseUrl}/favicon.svg`;
---

<!doctype html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <meta name="theme-color" content="#0d1117" />
    <link rel="icon" type="image/svg+xml" href="/open-data-orbit/favicon.svg" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Oxanium:wght@400;600;700;800&family=Red+Hat+Display:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;600&display=swap"
      rel="stylesheet"
    >
  </head>
  <body>
    <Navigation />
    <main class="container">
      <slot />
    </main>
    <footer class="footer">
      <div class="footer-inner container">
        <div class="footer-col footer-brand">
          <div class="footer-mark">
            <span class="footer-dot" aria-hidden="true"></span>
            <span class="footer-name">Open Data Orbit</span>
          </div>
          <p class="footer-tagline">
            Communitydriven kunskapsbank för öppna data i Sverige — i omlopp.
          </p>

          <div class="footer-telemetry">
            <span class="telemetry-pill"><span class="k">STATUS</span><span class="v">IN ORBIT</span></span>
            <span class="telemetry-pill"><span class="k">YEAR</span><span class="v">2026</span></span>
          </div>
        </div>

        <nav class="footer-col" aria-label="Site">
          <h3 class="footer-title">Orbit Directory</h3>
          <a href="/guides/" class="footer-link">Guides</a>
          <a href="/resources/" class="footer-link">Resources</a>
          <a href="/labs/" class="footer-link">Labs</a>
          <a href="/community/" class="footer-link">Community</a>
          <a href="/rewards/" class="footer-link">Rewards</a>
          <a href="/about/" class="footer-link">About</a>
        </nav>

        <div class="footer-col">
          <h3 class="footer-title">Mission Control</h3>
          <a class="footer-link" href="https://github.com/MelissaSkywalkz/open-data-orbit" target="_blank" rel="noopener">
            GitHub Repository ↗
          </a>
          <a class="footer-link" href="https://github.com/MelissaSkywalkz/open-data-orbit/discussions" target="_blank" rel="noopener">
            Discussions / Comms ↗
          </a>

          <div class="footer-cta">
            <a class="btn cta footer-btn" href="https://github.com/MelissaSkywalkz/open-data-orbit" target="_blank" rel="noopener">
              Contribute
            </a>
            <a class="btn secondary cta footer-btn" href="/community/">
              Enter Comms
            </a>
          </div>
        </div>
      </div>

      <div class="footer-bottom">
        <div class="container footer-bottom-inner">
          <span class="footer-muted">© 2026 Open Data Orbit</span>
          <span class="footer-muted">Built with Astro • Deployed on GitHub Pages</span>
        </div>
      </div>
    </footer>
  </body>
</html>