---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Icon from '../components/Icon.astro';
import Badge from '../components/Badge.astro';
---

<Layout title="Start" description="Guider, labs och community för öppna data">
  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-title">
        <span class="hero-title-accent">Open Data</span>
        <span class="hero-title-core">Orbit</span>
      </h1>
      <div class="hero-tags">
        <Badge label="GUIDES" />
        <Badge label="LABS" />
        <Badge label="COMMUNITY" />
      </div>
      <p class="hero-tagline">Guider, labs och community för öppna data.</p>
      <div class="glow-line"></div>
      <div class="hero-actions">
        <a href="/guides/" class="btn">Launch Guides</a>
        <a href="/community/" class="btn secondary">Enter Orbit</a>
      </div>
      <div class="hero-stats">
        <span class="stat">Status: In Orbit</span>
        <span class="stat">Mission: Open Data</span>
      </div>
    </div>
  </section>

  <div class="glow-line"></div>
  <section class="cards-section">
    <div class="cards-grid">
      <a href="/guides/" class="card card-home">
        <div class="card-icon"><Icon name="book" size={32} /></div>
        <h3 class="card-title">Lär dig</h3>
        <Badge label="GUIDES" />
        <p class="card-description">Utforska guider, tutorials och resurser för att komma igång med öppna data.</p>
      </a>
      <a href="/labs/" class="card card-home">
        <div class="card-icon"><Icon name="code" size={32} /></div>
        <h3 class="card-title">Bygg</h3>
        <Badge label="LABS" />
        <p class="card-description">Hitta datasets, tänk igenom idéer och implementera projekt i Labs.</p>
      </a>
      <a href="/community/" class="card card-home">
        <div class="card-icon"><Icon name="chat" size={32} /></div>
        <h3 class="card-title">Fråga & Dela</h3>
        <Badge label="COMMUNITY" />
        <p class="card-description">Ställ frågor, dela kunskap och samarbeta med communityn.</p>
      </a>
    </div>
  </section>

  <section class="latest-section">
    <h2>Mission Log</h2>
    <div class="latest-panel">
      <div class="latest-row"><Icon name="book" size={20} /> <span class="latest-label">UPLINK:</span> DCAT-AP-SE – minimum required fields</div>
      <div class="latest-row"><Icon name="code" size={20} /> <span class="latest-label">DEPLOY:</span> JSON Checker / Beautifier added</div>
      <div class="latest-row"><Icon name="chat" size={20} /> <span class="latest-label">COMMS:</span> “How do I find the right metadata?” (GitHub)</div>
    </div>
  </section>
</Layout>

<style>
.hero {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
  padding: var(--spacing-2xl) 0 var(--spacing-xl) 0;
  position: relative;
  z-index: 1;
}

/* Hero glow: tight + elegant (inte en stor dimma över allt) */
.hero::before {
  content: '';
  position: absolute;
  inset: -40px -20px -60px -20px;
  z-index: 0;
  pointer-events: none;
  background:
    radial-gradient(ellipse 55% 45% at 50% 25%, rgba(31,111,235,0.22) 0%, transparent 62%),
    radial-gradient(ellipse 45% 35% at 30% 22%, rgba(88,166,255,0.14) 0%, transparent 65%),
    radial-gradient(ellipse 45% 35% at 70% 18%, rgba(9,105,218,0.10) 0%, transparent 65%);
  filter: blur(10px);
  opacity: 0.9;
}

.hero > * {
  position: relative;
  z-index: 1;
}

.hero-title{
  font-family: var(--font-display);
  font-weight: 800;
  letter-spacing: 0.04em;
  color: var(--fg);
  text-shadow:
    0 12px 40px rgba(31,111,235,0.25),
    0 2px 12px rgba(0,0,0,0.6);
}

.hero-title-accent{
  background: linear-gradient(90deg, #1f6feb 0%, #58a6ff 45%, #1f6feb 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  text-shadow: 0 10px 40px rgba(31,111,235,0.10);
}

/* Orbit: near-white, premium (inte kritvit) */
.hero-title-core{
  color: rgba(230,237,243,0.94);
  text-shadow:
    0 0 0.5px rgba(255,255,255,0.55),
    0 0 18px rgba(88,166,255,0.18),
    0 18px 55px rgba(31,111,235,0.20);
}

/* Tagline vit/off-white (som du ville) */
.hero-tagline{
  color: rgba(230,237,243,0.92);
  text-shadow: 0 10px 40px rgba(31,111,235,0.12);
}

.hero-actions {
  display: flex;
  justify-content: center;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  flex-wrap: wrap;
}

/* Låt globals.css äga .btn-look, vi bara förstärker storlek här */
.btn, .btn.secondary {
  min-width: 180px;
  text-align: center;
  font-size: var(--font-size-lg);
  padding: var(--spacing-md) var(--spacing-xl);
}

/* Stats: “chip” look */
.hero-stats {
  display: flex;
  justify-content: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
  flex-wrap: wrap;
}

.stat {
    font-family: var(--font-mono);
  display: inline-block;
  font-family: var(--font-mono);
  font-size: var(--font-size-sm);
  color: var(--accent3);
  background: rgba(13,17,23,0.35);
  border-radius: 999px;
  padding: 5px 14px;
  border: 1px solid rgba(88,166,255,0.22);
  margin: 2px 4px;
  letter-spacing: 0.05em;
  font-weight: 700;
}

/* Cards section: INGEN egen bakgrund – låt body göra jobbet */
.cards-section {
  margin-bottom: var(--spacing-2xl);
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-2xl);
}

/* Home cards: glass + proffsigt */
.card-home {
  cursor: pointer;
  position: relative;
  overflow: hidden;
  min-height: 200px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  gap: var(--spacing-xs);

  /* Låt .card i globals göra det mesta, men vi vill ha lite extra gradient */
  background: rgba(22,27,34,0.72);
  border: 1px solid rgba(255,255,255,0.08);
  box-shadow: var(--shadow);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  padding: var(--spacing-lg) var(--spacing-md);
  border-radius: var(--radius);
  transition: transform 0.15s, border-color 0.18s, box-shadow 0.18s, filter 0.18s;
}

.card-home::before {
  content: "";
  position: absolute;
  inset: 0;
  pointer-events: none;
  background: linear-gradient(
    120deg,
    rgba(31,111,235,0.08) 0%,
    rgba(13,17,23,0.00) 55%,
    rgba(88,166,255,0.06) 100%
  );
  opacity: 0.9;
}

.card-home > * {
  position: relative;
  z-index: 1;
}

.card-home:hover {
  border-color: rgba(88,166,255,0.30);
  box-shadow: 0 22px 60px rgba(0,0,0,0.45);
  transform: translateY(-4px);
  filter: brightness(1.03);
}

.card-home .card-icon {
  margin-bottom: var(--spacing-xs);
  color: var(--accent3);
  text-shadow: 0 0 10px rgba(88,166,255,0.25);
}

.card-home .card-title {
  margin-bottom: var(--spacing-xs);
  color: var(--fg);
  margin-top: 0;
  font-weight: 800;
  letter-spacing: 0.01em;
  line-height: 1.18;
  text-shadow: none;
  font-size: var(--font-size-lg);
}

.card-home .card-description {
  margin: 0;
  color: var(--muted);
  line-height: 1.7;
  font-weight: 400;
  letter-spacing: 0.01em;
  opacity: 0.98;
}

.card-home .badge {
  margin-bottom: var(--spacing-xs);
  border-radius: 999px;
}

/* Latest */
.latest-section {
  margin-top: var(--spacing-2xl);
  padding: var(--spacing-xl) 0;
}

/* Gör den till “proffs glass card” med din gradientkänsla */
.latest-panel {
  border-radius: var(--radius);
  padding: var(--spacing-lg);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);

  background:
    radial-gradient(ellipse 70% 90% at 20% 0%, rgba(31,111,235,0.14) 0%, transparent 55%),
    radial-gradient(ellipse 70% 90% at 80% 20%, rgba(44,83,100,0.18) 0%, transparent 55%),
    rgba(22,27,34,0.75);

  border: 1px solid rgba(255,255,255,0.08);
  box-shadow: 0 20px 55px rgba(0,0,0,0.40);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}

.latest-row {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  color: var(--fg);
  font-size: var(--font-size-base);
}

.latest-label {
    font-family: var(--font-mono);
  font-family: var(--font-mono);
  font-size: var(--font-size-sm);
  color: var(--accent3);
  background: rgba(13,17,23,0.35);
  border-radius: 999px;
  padding: 3px 10px;
  letter-spacing: 0.08em;
  font-weight: 800;
  border: 1px solid rgba(88,166,255,0.18);
}

/* Mobile */
@media (max-width: 768px) {
  .hero-title { font-size: 2rem; }
  .hero-tagline { font-size: var(--font-size-lg); }

  .hero-actions {
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .hero-stats {
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .cards-grid { grid-template-columns: 1fr; }
  .latest-panel { padding: var(--spacing-md); }
}
</style>